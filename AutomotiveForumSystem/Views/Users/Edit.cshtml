@model UserUpdateProfileInformationViewModel

<div class="d-flex justify-content-center align-items-center" style="height: 70%;">
	<form asp-controller="Users" asp-action="Edit" asp-route-username="@Context.Session.GetString("CurrentUser")" class="d-flex flex-column justify-content-between" style="max-width: 40em;" method="post">
		<div>
			<div style="text-align:center;">
				<span asp-validation-for="FirstName" style="color: #7B0828; background-color: white; margin-bottom: 5px; border-radius: 5px;"></span>
			</div>
			<div style="text-align:center;">
				<span asp-validation-for="LastName" style="color: #7B0828; background-color: white; margin-bottom: 5px; border-radius: 5px;"></span>
			</div>
			<div style="text-align:center;">
				<span asp-validation-for="Email" style="color: #7B0828; background-color: white; margin-bottom: 5px; border-radius: 5px;"></span>
			</div>
		</div>	
		<div class="d-flex">
			<div class="form-floating m-3">
				<input asp-for="FirstName" type="text" id="floatingInput" placeholder="" class="form-control" />
				<label asp-for="FirstName" class="form-label">First name</label>
			</div>

			<div class="form-floating m-3">
				<input asp-for="LastName" type="text" id="floatingInput" placeholder="" class="form-control" />
				<label asp-for="LastName" class="form-label">Last name</label>
			</div>
		</div>
		<div class="d-flex">
			<div class="form-floating m-3">
				<input asp-for="Email" type="email" id="floatingInput" placeholder="" class="form-control" />
				<label asp-for="Email" class="form-label">Email</label>
			</div>

			<div class="form-floating m-3">
				<input asp-for="PhoneNumber" type="tel" id="floatingInput" placeholder="" class="form-control" pattern="\+*\d+" />
				<label asp-for="PhoneNumber" class="form-label">Phone number (optional)</label>
			</div>
		</div>
		<div>
			<div class="login-button-container d-flex justify-content-center">
				<input type="submit" value="Save Changes" class="btn btn-primary"/>
			</div>
		</div>
	</form>
</div>