@model UserProfileViewModel

@{
    Layout = "_Layout";
}

<div class="row bg-secondary shadow rounded-3">
    <div class="d-flex justify-content-center flex-column p-3" style="width:15%;">
        <img src="~/images/user-128-light.png" style="margin-bottom: 15px;"/>
        <div class="d-flex flex-column align-items-center text-light bg-light bg-opacity-25 p-3 rounded-3 shadow">
            <p class="m-2">@Model.Username</p>
            <p class="m-2">@Model.FirstName</p>
            <p class="m-2">@Model.LastName</p>
            <p class="m-2">@Model.Email</p>
            <p class="m-2">@Model.PhoneNumber</p>
        </div>
    </div>
    <div class="overflow-auto col bg-light bg-opacity-25 m-3 rounded-3">
        @{
            foreach (var post in Model.Posts)
            {
                <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id" class="btn card bg-dark sticky shadow m-5">
                    <div class="card-body d-flex justify-content-left row" style="color: #fff">
                        <h5 class="card-title row">@post.Title</h5>
                        <h6 class="card-subtitle row mb-2">@post.CategoryName</h6>

                        <div class="d-flex">
                            <span><img src="~/images/like.png" alt="Post Image" class="img-fluid" /></span>
                            <span class="card-text m-1">@post.Likes</span>
                        </div>

                        <span class="card-text" style="text-align: right">@post.CreatedBy</span>
                    </div>
                </a>
            }
        }
    </div>
</div>