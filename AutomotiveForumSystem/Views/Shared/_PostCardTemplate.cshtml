<a asp-controller="Posts" asp-action="Index" asp-route-id="@Model.Id" class="btn card bg-dark sticky shadow m-5">
	<div class="card-body d-flex justify-content-left row" style="color: #fff">
		<h4 class="card-title row">@Model.Title</h4>
		<p class="card-subtitle row mb-2">@Model.CategoryName</p>
		<div class="d-flex p-0">
			@{
				foreach (var item in Model.Tags)
				{
					<div class="badge bg-danger m-1">@item.Name</div>
				}
			}
		</div>
		<hr />
		<div class="d-flex justify-content-between" style="padding-left: 0px;">
			<div class="d-flex">
				<img src="~/images/user-128-dark.png" class="bg-light rounded-circle p-1" style="max-width:28px; max-height:28px; margin-right: 5px" />

				<span class="card-text" style="text-align: right">@Model.CreatedBy</span>
			</div>

		</div>
		<div class="d-flex justify-content-between mt-3" style="padding-left:0;">
			<p class="mb-md-0" style="padding-top: 5px;">@Model.CreateDate</p>
			<div class="d-flex justify-content-end">
				<span><img src="~/images/like.png" alt="Post Image" class="img-fluid" /></span>
				<span class="card-text m-1">@Model.Likes</span>
			</div>
		</div>
	</div>
</a>