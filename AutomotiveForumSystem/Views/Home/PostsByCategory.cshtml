@model List<AutomotiveForumSystem.Models.ViewModels.PostPreViewModel>

@{
	var currentCategory = ViewData["CategoryPreview"];
}

<h4 class="text-light">@currentCategory</h4>

<hr class="bg-light"/>

@{
	if (Model.Count > 0)
	{
		foreach (var post in Model)
		{
			<a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id" class="btn card bg-secondary m-5">
				<div class="card-body d-flex justify-content-left row" style="color: #fff">
					<h5 class="card-title row">@post.Title</h5>
					<h6 class="card-subtitle row mb-2">@post.CategoryName</h6>

					<div class="d-flex" style="margin-top: 0px">
						<span><img src="~/images/like.png" alt="Post Image" class="img-fluid" /></span>
						<span class="card-text m-1">@post.Likes</span>
					</div>

					<span class="card-text" style="text-align: right">@post.CreatedBy</span>
				</div>
			</a>
		}
	}
	else
	{
		<h4>No posts created for category.</h4>
	}
}