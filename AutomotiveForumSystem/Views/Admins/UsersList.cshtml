@model List<User>

<div class="d-flex justify-content-center gap-5" style="width: 100%;">
    @foreach (var user in Model)
    {
        <a target="_blank" style="text-decoration: none;" asp-controller="Users" asp-action="Index" asp-route-username="@user.Username">
            <div style="background-color: green; border-radius: 10px 600px;" class="d-flex flex-column bg-dark text-light p-4 align-items-center">
                <p>@user.Username</p>
                <p>@user.FirstName</p>
                <p>@user.LastName</p>
                <p>@user.Email</p>
                <p>@(user.PhoneNumber ?? "Unknown")</p>
            </div>
        </a>
    }
</div>
