@model List<User>

<div class="d-flex justify-content-center gap-5" style="width: 100%;">
    @foreach (var user in Model)
    {
        <a target="_blank" class="user-item d-flex flex-column bg-dark text-light p-4 align-items-center" style="text-decoration: none; border-radius: 10px 80px;" asp-controller="Users" asp-action="Index" asp-route-username="@user.Username">
            <p>@user.Username</p>
            <p>@user.FirstName</p>
            <p>@user.LastName</p>
            <p>@user.Email</p>
            <p>@(user.PhoneNumber ?? "Unknown")</p>
        </a>
    }
</div>
